.row
  .col-lg-4
    .card
      .card-header
        .fa.fa-user
        Client
        .float-right
          = link_to '', edit_client_path(@client), class: "btn btn-warning fa fa-edit btn-sm", title: 'Edit', 'data-toggle' => 'tooltip', 'data-placement' => 'top' if policy(@client).edit?
      .card-body
        %b Name:
        = @client.full_name
        %br
        %b Phone number:
        = link_to "tel:#{@client.phone_number}", class: "button" do
          #{@client.phone_number}
        /%a{:href => "viber://chat?number=#{@client.phone_number}"}
        /  Viber
        %br
        %b Email:
        %a{:href => "mailto:#{@client.email}"}= @client.email
        %br
        %b Date of birth:
        - if @client.date_of_birth.present?
          = @client.date_of_birth.strftime('%d/%b/%Y') 
          (#{@client.age})
        %br
        %b Gender:
        = @client.gender
        %br
        %b Address:
        - if @client.address?
          /= @client.address
          /#{@client.address[:street_address]}, #{@client.address[:city]}, #{@client.address[:state]}, #{@client.address[:zip]}
          = @client.address[:street_address]
          = @client.address[:city]
          = @client.address[:state]
          = @client.address[:zip]
        %hr
        %b Balance:
        = number_to_currency(@client.balance_cents, :unit => "#{Tenant.current_tenant.default_currency.upcase} ")
        /%br
        /%b Status:
        /= status_label(@client.status)
    %p
    .card
      .card-header
        %b Comments:
        = @client.comments_count
      .card-body
        = render "comments/form"
        = render "comments/index"
    %p
  .col-lg-8
    = render 'home/calendar'
