.nested-fields
  .card-body.border.border-primary.rounded
    = f.input :service_id, collection: ServiceCategory.all, as: :grouped_select, group_method: :services, label_method: :name_price_duration_description, class: 'selectize'
    - if f.object.new_record?
      = f.association :member, collection: Member.active_or_id(f.object.member_id), selected: current_user.member.id
    - else
      = f.association :member, collection: Member.active_or_id(f.object.member_id)
    .text-right
      = link_to_remove_association "", f, class: 'btn fa fa-trash btn-sm btn-danger'
  %p