-# frozen_string_literal: true
= simple_form_for(@appointment) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :starts_at, :minute_step => 15, start_year: Date.today.year

    = f.label :client
    = f.error :client, class: 'text-danger'
    = f.select :client_id, Client.all.map{|c| [c.full_name, c.id]}, {include_blank: Client.all.length > 1}, class: 'selectize'

    = f.label :member
    = f.error :member, class: 'text-danger'
    = f.select :member_id, Member.active.map{|c| [c.full_name, c.id]}, {include_blank: Member.all.length > 1}, class: 'selectize'

    = f.label :location
    = f.error :location, class: 'text-danger'
    = f.select :location_id, Location.active.map{|c| [c.name, c.id]}, {include_blank: Location.all.length > 1}, class: 'selectize'

    = f.input :status, :as => :radio_buttons, :collection => Appointment.statuses.keys.to_a

    = f.input :description

  .form-actions
    = f.button :submit, class: 'btn btn-success'
