- model_class = Service
= search_form_for @q, url: services_path do |f|
  .card.card-default
    .container-fluid
      .card-heading
        %h4.card-title.float-left{:style => "padding-top: 7.5px;"} 
          %b
            =t '.title', :default => model_class.model_name.human.pluralize.titleize
        %h4.card-title.float-right{:style => "padding-top: 7.5px;"} 
          = link_to '', services_path, class: "btn btn-secondary fa fa-redo", title: 'Refresh', 'data-toggle' => 'tooltip', 'data-placement' => 'top'
          - if policy(Service).create?
            = link_to t('.new', :default => t("helpers.links.new")), new_service_path, class: 'btn btn-sm btn-primary'
    .card-header
      .row
        .col-md-4
          = f.text_field :name_cont, class: "form-control", placeholder: "Name", autofocus: true, :autocomplete => :off
        .col-md-4
          = f.select :service_category_name_cont, options_from_collection_for_select(ServiceCategory.all, :name, :name, @q.service_category_name_cont), { :include_blank => true }, :class => "form-control"
        .col-md-4
          = f.submit
.table-responsive
  %table#table1
    %thead
      %tr
        %th= sort_link @q, :name, :name
        %th= sort_link @q, :service_category_name, :service_category_name
        %th= model_class.human_attribute_name(:description)
        %th= sort_link @q, :duration, :duration
        %th= sort_link @q, :client_price, :client_price
        %th= sort_link @q, :member_percent, :member_percent
        %th= sort_link @q, :member_price, :member_price
        %th= sort_link @q, :status, :status
        %th= model_class.human_attribute_name(:repeat_reminder)
        %th= model_class.human_attribute_name(:jobs_count)
        %th
        %th
    %tbody
      - @services.each do |service|
        %tr
          %td= link_to service.name, service_path(service)
          %td
            = service.service_category
            - if policy(service.service_category).edit?
              = link_to '', edit_service_category_path(service.service_category), class: "btn btn-warning fa fa-edit btn-sm"
          %td= service.description
          %td= service.duration
          %td= number_to_currency(service.client_price_cents, :unit => "#{Tenant.current_tenant.default_currency.upcase} ")
          %td= number_to_percentage(service.member_percent, precision: 0)
          %td= number_to_currency(service.member_price_cents, :unit => "#{Tenant.current_tenant.default_currency.upcase} ")
          %td= status_label(service.status)
          %td= service.repeat_reminder
          %td= service.jobs_count
          %td= link_to '', edit_service_path(service), class: "btn btn-warning fa fa-edit btn-sm" if policy(service).edit?
          %td= link_to '', service, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger fa fa-trash btn-sm" if policy(service).destroy?
.container
  = will_paginate @services, renderer: WillPaginate::ActionView::BootstrapLinkRenderer
%br
