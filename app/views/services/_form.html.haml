-# frozen_string_literal: true
= simple_form_for(@service, local: true) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.label :service_category
    = f.error :service_category, class: 'text-danger'
    = f.collection_select :service_category_id, ServiceCategory.order(:name), :id, :name, {prompt: 'Select an category'}, {class: 'selectize-category'}

    = f.input :name, autofocus: true
    = f.input :description
    = f.input :duration, placeholder: '30'
    /= f.input :duration, collection: ['15', '30', '45', '60', '75', '90', '120']
    = f.input :client_price_cents, label: "Client price, #{Tenant.current_tenant.default_currency.upcase}", placeholder: '59.99', as: :integer, input_html: { autocomplete: 'off' }
    = f.input :member_percent, placeholder: '50'
    /= f.input :quantity
    /= f.input :status
    - unless f.object.new_record?
      = f.input :status, :as => :radio_buttons, :collection => Service.statuses.keys.to_a, label:false

  .form-actions
    = f.button :submit, class: "btn btn-success", title: 'Create', 'data-toggle' => 'tooltip', 'data-placement' => 'top'

