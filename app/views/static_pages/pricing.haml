      .card-body.pt-0
        = link_to 'Try for free', new_user_registration_path(plan: 'silver'), class: 'btn btn-lg btn-warning'
        %ul.list-unstyled.mb-4
          %li 2-6 Employees
          %li Free implementation
          %li Free support
    .card.card-pricing.text-center.px-3.mb-4
      %span.h6.w-60.mx-auto.px-4.py-1.rounded-bottom.bg-warning.text-black.shadow-sm gold
      .bg-transparent.card-header.pt-4.border-0
        %h1.h1.font-weight-normal.text-warning.text-center.mb-0{"data-pricing-value" => "65"}
          $
          %span.price 50
          %span.h6.text-muted.ml-2 / month
      .card-body.pt-0
        = link_to 'Try for free', new_user_registration_path(plan: 'gold'), class: 'btn btn-lg btn-warning'
        %ul.list-unstyled.mb-4
          %li 7-15 Employees
