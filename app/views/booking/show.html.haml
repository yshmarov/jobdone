%p
/.text-center
= link_to booking_list_path, class: 'btn btn-secondary' do
  .fa.fa-step-backward
  all listings
%p
.jumbotron.bg-dark.text-center.text-light
  - if @tenant.logo.attached?
    = image_tag @tenant.logo, height: "150px", class: "mx-auto d-inline align-top rounded"
  - else
    .fa.fa-image{:style => "font-size:50px"}

  %h1= @tenant.name
  %p= @tenant.website
  %p= @tenant.industry

- set_var 'locale', @tenant.locale
- set_var 'resources', @members.map{|z| {id: z.id, title: z.short_name.to_s}}
/ - set_var 'events', @jobs.map{|e| {id: e.id, title: "XXX", resourceId: e.member_id.to_s, start: e.event.starts_at, end: e.event.ends_at, url: event_path(e.event), color: "grey"}}
- set_var 'events', @events.map{|e| {resourceIds: e.jobs.collect{|r| r.member_id}, title: "BUSY", start: e.starts_at, end: e.ends_at, color: "grey"}}

/.container
.row
  .col-lg-3
    .text-center
      %h4= t('sidebar.locations')
    - Location.all.each do |location|
      .card.card-header
        %b= location.name
        - if location.phone_number.present?
          .row
          .form-inline
            .fa.fa-phone.mr.mr-2
            = location.phone_number
        .row
        .form-inline
          .fa.fa-map-marker-alt.mr.mr-2
          = location.address_line
    %p
  .col-lg-3
    .text-center
      %h4= t('sidebar.services')
    - Service.active.order(jobs_count: :desc).each do |service|
      .card.card-header
        %b= service.service_category
        .form-inline
          .fa.fa-hand-paper.mr.mr-2
          %b= service.name
        .row
          .col-md-6
            .form-inline
              .fa.fa-tag.mr.mr-2
              = number_to_currency(service.client_price_cents, unit: "#{Tenant.current_tenant.default_currency.upcase}", format: "%n %u")
          .col-md-6
            .form-inline
              .fa.fa-clock.mr.mr-2
              = service.duration
              min
    %p
  .col-lg-6
    #event_calendar
    %p
/%br