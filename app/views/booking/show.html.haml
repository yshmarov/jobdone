- content_for :title do
  = @tenant.name

.container-fluid
  /custom locale for this page. quick workaround without going to application_controller
  - I18n.locale = @tenant.locale
  /= Time.zone.now
  %p
  %small
    .font-weight-light
      = link_to booking_path, class: '' do
        booking
      \/
      = link_to I18n.t(@tenant.industry, scope: [:static_pages, :landing_page]), booking_path(q: {industry_cont: @tenant.industry})
      \/
      = link_to booking_show_path(@tenant), class: 'text-dark' do
        = @tenant.name

  .card.card-body.gradient-purple
    .text-light
      .row
        .col-md-4
          .text-center
            - if @tenant.logo.attached?
              = image_tag @tenant.logo, width: "200px", class: "mx-auto d-inline align-top rounded"
            - else
              .fa.fa-image{:style => "font-size:50px"}
        .col-md-6
          %h3= @tenant.name
          %hr
          - if @tenant.instagram.present?
            = link_to "http://www.instagram.com/#{@tenant.instagram}", target: :_blank, class: 'text-white' do 
              .fab.fa-instagram
              = @tenant.instagram
          %p
          - if @tenant.website.present?
            = link_to "http://#{@tenant.website}", target: :_blank, class: 'text-white' do
              .fa.fa-globe-africa
              = @tenant.website
          %hr
          - if @tenant.description.present?
            %small= simple_format(@tenant.description)
          %p
          = link_to t('sidebar.online_booking'), new_booking_path(@tenant), class: 'btn btn btn-success'
  .row
    .col-lg-4
      - if @locations.any?
        .text-center
          %h4= t('.location_contacts')
        - @locations.each do |location|
          .card
            .card-header.bg-light
              %b= location.name
              - if location.address.present?
                .row.mt-1
                .form-inline
                  .fa.fa-map-marker-alt.mr.mr-2
                  = location.address_line
              .row
    
              - if location.phone_number.present?
                = link_to "tel:#{location.phone_number}", class: "btn btn-primary btn-sm mr-1" do
                  .fa.fa-phone
              - if location.whatsapp.present?
                /= link_to "https://api.whatsapp.com/send?phone=380505532698&text=&source=&data=", class: "button", :target => "_blank" do
                = link_to "https://wa.me/#{location.whatsapp}", class: "btn btn-success btn-sm mr-1", :target => "_blank" do
                  .fab.fa-whatsapp
              - if location.viber.present?
                = link_to "viber://chat?number=#{location.viber}", class: "btn btn-purple btn-sm mr-1" do
                  .fab.fa-viber
              - if location.telegram.present?
                = link_to "tg://resolve?domain=#{location.telegram}", class: "btn btn-info btn-sm mr-1" do
                  .fab.fa-telegram-plane
              - if location.email.present?
                = link_to "mailto:#{location.email}", class: "btn btn-secondary btn-sm mr-1" do
                  .fa.fa-envelope
        %p
      - if @members.any?
        .text-center
          %h4= t('.members_team')
        - @members.each do |member|
          .card
            .card-header
              - if member.avatar.attached?
                = image_tag member.avatar, width: "40px", class: "mx-auto d-inline align-top rounded"
              - else
                .fa.fa-user
              = member.first_name
              .row
              - member.skills.each do |skill|
                .badge.badge-secondary
                  = skill.service_category

      %p
    .col-lg-8
      - if @service_categories.any?
        .text-center
          %h4= t('sidebar.services')
        - @service_categories.each do |service_category|
          .card
            .card-header
              = service_category.name
            - service_category.services.active.online_booking.order(jobs_count: :desc).each do |service| 
              .card-header.bg-white
                .row
                  .col-lg-6
                    .form-inline
                      .fa.fa-hand-paper.mr.mr-2
                      %b= service.name
                    .form-inline
                      .fa.fa-clock.mr.mr-2
                      = service.duration
                      min
                    .form-inline
                      .fa.fa-tag.mr.mr-2
                      = number_to_currency(service.client_price_cents, unit: "#{@tenant.default_currency.upcase}", format: "%n %u")
                  .col-lg-6.text-right
                    = link_to new_booking_path(@tenant, service_id: service.id), class: 'btn btn-success btn-sm' do 
                      = t('sidebar.online_booking')
                %small= service.description
          %p
    /.col-lg-5
    /- set_var 'locale', @tenant.locale
    /- set_var 'resources', @members.map{|z| {id: z.id, title: z.short_name.to_s}}
    // - set_var 'events', @jobs.map{|e| {id: e.id, title: "XXX", resourceId: e.member_id.to_s, start: e.event.starts_at, end: e.event.ends_at, url: event_path(e.event), color: "grey"}}
    /- set_var 'events', @events.map{|e| {resourceIds: e.jobs.collect{|r| r.member_id}, title: "BUSY", start: e.starts_at, end: e.ends_at, color: "grey"}}
    /  #event_calendar
    /  %p
  /%br