%p
/.text-center
= link_to 'all listings', booking_list_path
.jumbotron.bg-white.text-center
  %h1= @tenant.name
  %p= @tenant.industry

- set_var 'locale', @tenant.locale
- set_var 'resources', @members.map{|z| {id: z.id, title: z.short_name.to_s}}
/ - set_var 'events', @jobs.map{|e| {id: e.id, title: "XXX", resourceId: e.member_id.to_s, start: e.event.starts_at, end: e.event.ends_at, url: event_path(e.event), color: "grey"}}
- set_var 'events', @events.map{|e| {resourceIds: e.jobs.collect{|r| r.member_id}, title: "BUSY", start: e.starts_at, end: e.ends_at, color: "grey"}}

/.container
.row
  .col-lg-3
    - Location.all.each do |location|
      .card.card-header
        %b= location.name
        .row
        .form-inline
          .fa.fa-phone.mr.mr-2
          = location.phone_number
        .row
        .form-inline
          .fa.fa-map-marker-alt.mr.mr-2
          = location.address_line
  .col-lg-3
    - Service.active.each do |service|
      .card.card-header
        %b= service.name
        .row
        .form-inline
          .fa.fa-tag.mr.mr-2
          = number_to_currency(service.client_price_cents, unit: "#{Tenant.current_tenant.default_currency.upcase}", format: "%n %u")
        .row
        .form-inline
          .fa.fa-clock.mr.mr-2
          = service.duration
          min
  .col-lg-6
    #event_calendar
    %p
/%br