- model_class = Lead
.card#pills-background
  .card-header
    %h5
      .far.fa-envelope
      %b= t('sidebar.online_booking')
      .badge.badge-info
        = @leads.count
      /.badge.badge-danger
      /  = @leads.active.count
      .float-right
        = link_to leads_path, method: :post, class: 'btn btn-success btn-sm' do
          .fa.fa-magic
= render 'index'
!= pagy_bootstrap_nav(@pagy)
