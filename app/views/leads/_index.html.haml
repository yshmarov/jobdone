- model_class = Lead
.card
  .card-header
    %h5.float-left
      .fa.fa-globe-africa
      %b= t('sidebar.online_booking')
      .badge.badge-info
        = @leads.count
    .float-right
      - if Tenant.current_tenant.online_booking
        .mr.mt-1
        - if Rails.env.development?
          = link_to 'WIZARD', booking_wizard_path(:select_service), class: 'btn btn-danger btn-sm'
        .row
        = link_to t('sidebar.public_page'), booking_show_path(Tenant.current_tenant), class: 'btn btn-success btn-sm'
        / COPY TO CLIPBOARD WITH JAVASCRIPT
        %input#myInput{:readonly => "readonly", :type => "text", :value => "xlplan.com/booking/#{Tenant.current_tenant.id}"}
        / The button used to copy the text
        %button{:onclick => "myFunction()"}
          .fa.fa-copy
        :javascript
          function myFunction() {
            var copyText = document.getElementById("myInput");
            copyText.select(); 
            copyText.setSelectionRange(0, 99999); /*For mobile devices*/
            document.execCommand("copy");
          }
        .row
        = link_to t('sidebar.online_booking'), new_booking_path(Tenant.current_tenant), class: 'btn btn-success btn-sm'
        / COPY TO CLIPBOARD WITH JAVASCRIPT
        %input#myInput2{:readonly => "readonly", :type => "text", :value => "xlplan.com/booking/#{Tenant.current_tenant.id}/new"}
        / The button used to copy the text
        %button{:onclick => "myFunction2()"}
          .fa.fa-copy
        :javascript
          function myFunction2() {
            var copyText = document.getElementById("myInput2");
            copyText.select(); 
            copyText.setSelectionRange(0, 99999); /*For mobile devices*/
            document.execCommand("copy");
          }
      - else
        .mr.mt-1
        = link_to edit_tenant_path, class: 'btn btn-secondary btn-sm' do 
          .fa.fa-toggle-off
          = t('sidebar.online_booking')

.table-responsive
  %table#table1
    %thead
      %tr
        %th= model_class.human_attribute_name(:first_name)
        %th= model_class.human_attribute_name(:phone_number)
        %th= model_class.human_attribute_name(:email)
        %th= model_class.human_attribute_name(:comment)
        %th= model_class.human_attribute_name(:location)
        %th= model_class.human_attribute_name(:member)
        %th= model_class.human_attribute_name(:service)
        %th= model_class.human_attribute_name(:starts_at)
        %th= model_class.human_attribute_name(:created_at)
        /%th= model_class.human_attribute_name(:updated_at)
        /%th IP-address
        /%th Source
        %th= model_class.human_attribute_name(:coupon)
        /%th
        /%th
        %th
    %tbody
      - @leads.each do |lead|
        %tr
          %td
            - unless lead.client.present?
              = lead.full_name
              = button_to t('contacts.index.create_client'), create_client_from_lead_lead_path(lead.id), method: :patch, class: 'btn btn-sm btn-primary mr-sm-2 btn-block'
            - else lead.client.present?
              = link_to lead.client.full_name, client_path(lead.client)
          %td
            /.fa.fa-phone
            = link_to "tel:#{lead.phone_number}", class: "button" do
              #{number_to_phone(lead.phone_number)}
          %td
            - if lead.email.present? 
              /.fa.fa-envelope
              %a{:href => "mailto:#{lead.email}"}= lead.email
          %td= lead.comment
          %td
            = link_to lead.location, location_path(lead.location) if lead.location.present?
          %td
            = link_to lead.member, member_path(lead.member) if lead.member.present?
          %td
            = link_to lead.service, service_path(lead.service) if lead.service.present?
          %td
            - if lead.starts_at.present?
              = lead.starts_at.strftime('%d/%m/%Y %H:%M')
          %td= lead.created_at.strftime('%d/%m/%Y %H:%M')
          /%td= lead.updated_at
          /%td
          /  %small= lead.ip_address
          /%td
          /  %small= lead.referer
          %td= lead.coupon
          /%td= link_to 'Show', lead
          /%td
          /  = link_to '', edit_lead_path(lead), class: "btn btn-warning fa fa-edit btn-sm"  if policy(lead).edit?
          %td
            = link_to '', lead, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger fa fa-trash btn-sm" if policy(lead).destroy?
!= pagy_bootstrap_nav(@pagy)
