%h1 Listing workplaces

%table
  %thead
    %tr
      %th Name
      %th Location
      %th Status
      /%th
      /%th
      /%th

  %tbody
    - @workplaces.each do |workplace|
      %tr
        %td= workplace.name
        %td= workplace.location
        %td= workplace.status
        /%td= link_to 'Show', workplace
        /%td= link_to 'Edit', edit_workplace_path(workplace)
        /%td= link_to 'Destroy', workplace, method: :delete, data: { confirm: 'Are you sure?' }

