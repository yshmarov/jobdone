.card
  .card-header
    .fa.fa-rocket
    Getting started
  .card-body
    %h5
      = link_to 'update your company settings', edit_plan_path
      %hr
      = link_to 'update your personal info', edit_member_path(current_user.member)
      %hr
      - if Tenant.current_tenant.plan != 'free'
        - unless Member.count >= 2
          %span.badge.badge-pill.badge-danger 0
          = link_to "Invite Employees to your organization", new_member_path
        - else
          %span.badge.badge-pill.badge-success 0
          %del
            Invite Employees to your organization
        %hr
      - unless Location.any?
        %span.badge.badge-pill.badge-danger 1
        = link_to 'Add a Location', new_location_path
      - else
        %span.badge.badge-pill.badge-success 1
        %del
          Add a Location
      %hr
      - unless Service.any?
        %span.badge.badge-pill.badge-danger 2
        = link_to 'Add a Service', new_service_path
      - else
        %span.badge.badge-pill.badge-success 2
        %del
          Add a Service
      %hr
      - unless Client.any?
        %span.badge.badge-pill.badge-danger 3
        = link_to 'Add a Client', new_client_path
      - else
        %span.badge.badge-pill.badge-success 3
        %del
          Add a Client
      %hr
      - unless Appointment.any?
        .fa.fa-times-circle{:style => "color:red"}

        = link_to 'Add an Appointment', new_appointment_path
      - else
        .fa.fa-check-circle{:style => "color:green"}
        %del
          Add an Appointment
      %hr
      - unless Job.any?
        .fa.fa-times-circle{:style => "color:red"}

        = link_to 'Add jobs to your first appointment', edit_appointment_path(Appointment.first) if Appointment.any?
      - else
        .fa.fa-check-circle{:style => "color:green"}
        %del
          Add jobs to your first appointment
      %hr
        Great! Now you can checkout the appointment
/%p
