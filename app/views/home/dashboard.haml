%h4
  .fa.fa-tachometer-alt
  Dashboard


- Member.all.each do |x|
  = x.user.email
  = x.user.roles.collect{|r| r.name}.to_sentence
  = link_to 'Edit roles', edit_user_path(x.user), class: 'btn btn-warning btn-sm'

%p
- unless Job.any?
  .card
    .card-header
      .fa.fa-rocket
      Getting started
    .card-body
      - unless Service.any?
        %h5
          %span.badge.badge-pill.badge-success 1
          = link_to 'Add a service', new_service_path
        %hr
      - unless Employee.any?
        %h5
          %span.badge.badge-pill.badge-success 2
          = link_to 'Invite members', new_member_path
        %hr
      - unless Client.any?
        %h5
          %span.badge.badge-pill.badge-success 3
          = link_to 'Add a client', new_client_path
        %hr
      - unless Job.any?
        %h5
          %span.badge.badge-pill.badge-success 4
          = link_to 'Add an appointment', new_job_path
%p
.row
  .col-xl-4
    .card
      .card-header
        .fa.fa-chart-line
        New Jobs in the last 30 days
      .card-body
        = Job.where('created_at >= ?', 1.month.ago).count
    %p
  .col-xl-4
    .card
      .card-header
        .fa.fa-chart-line
        New Clients in the last 30 days
      .card-body
        = Client.where('created_at >= ?', 1.month.ago).count
    %p
  .col-xl-4
    .card
      .card-header
        .fa.fa-chart-line
        Turnover in the last 30 days
      .card-body
        = number_to_currency(@total_confirmed_earnings, :unit => "$")
%p
.row
  .col-xl-4
    .card-header
      .fa.fa-globe
      Activity
      .float-right
        = link_to 'more', activity_path, class: 'btn btn-sm btn-primary'
    .card
      =  render 'home/activity'
    %p
  .col-xl-4
    .card
      .card-header
        .fa.fa-calendar
        Upcoming appointments
      .card-body
    %p
  .col-xl-4
    .card-header
      .fa.fa-calendar-check
      Mark attendance
      .float-right
        = link_to "#{Job.mark_attendance.count} Tasks", mark_attendance_jobs_path, class: 'btn btn-sm btn-primary'
    .card
      = render 'jobs/index'
