- model_class = Member
.row
  .col-lg-3
  .col-lg-6
    .card
      .card-header#pills-background
        %h5
          .fa.fa-user-tie
          =t '.title', :default => [:'helpers.titles.edit', 'Edit %{model}'], :model => model_class.model_name.human.titleize
      .card-body
        = render 'form'
        %p
        = link_to t('.cancel', :default => t("helpers.links.cancel")), @member, :class => 'btn btn-danger'
