.row
  .col-lg-4
    .card
      .card-header
        %b Member
        .float-right
          = link_to '', edit_member_path(@member), class: "btn btn-warning fa fa-edit btn-sm", title: 'Edit', 'data-toggle' => 'tooltip', 'data-placement' => 'top' if policy(@member).update?
      .card-body
        .text-center
          .fa.fa-user-tie.fa-4x
        %b Name:
        = @member.full_name
        %br
        %b Phone number:
        = link_to "tel:#{@member.phone_number}", class: "button" do
          #{@member.phone_number}
        /%a{:href => "viber://chat?number=#{@member.phone_number}"}
        /  Viber
        %br
        %b Email:
        %a{:href => "mailto:#{@member.email}"}= @member.email
        %br
        %b Date of birth:
        - if @member.date_of_birth.present?
          = @member.date_of_birth.strftime('%d/%b/%Y') 
          (#{@member.age})
        %br
        %b Gender:
        = @member.gender
        %br
        %b Address:
        = @member.address
        %hr
        %b Balance:
        = number_to_currency(@member.balance_cents, :unit => "$")
        %br
        %b Status:
        = status_label(@member.status)
        %br
        %b Location:
        = link_to @member.location, location_path(@member.location) if @member.location.present?
        %hr
        %b Created at:
        = @member.created_at.strftime('%d/%b/%Y, %H:%M')
    %p
    .card
      .card-header
        %b Skills
        .float-right
          = link_to 'Add Skill', new_member_skill_path(@member, @skill), class: 'btn btn-sm btn-primary'
          /= link_to 'Add Skill', new_artifact_path(project_id: @project.id), :class => 'btn btn-primary'
      .card-body
        - @member.skills.each do |skill|
          = skill.service_category
          = link_to "delete", member_skill_path(@member, skill), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger'
          \,
        /= @member.skills.map{|p| p.service_category}.join(", ")
    %p
    .card
      .card-header
        %b Account & access
        .float-right
          -  if @member.id == current_user.id
            = link_to 'Edit password', edit_user_registration_path(@member.user), class: 'btn btn-sm btn-warning'
      .card-body
        - if @member.user.present?
          %p
            %b Created:
            = @member.user.created_at.strftime('%d/%b/%Y, %H:%M')
            %br
            %b Confirmed:
            = @member.user.confirmed_at.strftime('%d/%b/%Y, %H:%M') if @member.user.confirmed_at.present?
            /%br
            /%b Invited by:
            /= @member.user.invitor
  .col-lg-8
    .card
      .card-header
        %b Calendar
      .card-body
        = render 'home/calendar'
    %p
    %ul#myTab.nav.nav-tabs{:role => "tablist"}
      %li.nav-item
        %a#dropp1-tab.nav-link.active{"aria-controls" => "dropp1", "aria-selected" => "false", "data-toggle" => "tab", :href => "#drop1", :role => "tab"} Jobs: #{@member.jobs_count}
      %li.nav-item
        %a#dropp2-tab.nav-link{"aria-controls" => "dropp2", "aria-selected" => "true", "data-toggle" => "tab", :href => "#drop2", :role => "tab"} Calendar
      %li.nav-item
        %a#dropp3-tab.nav-link{"aria-controls" => "dropp3", "aria-selected" => "true", "data-toggle" => "tab", :href => "#drop3", :role => "tab"} Stats
    #myTabContent.tab-content
      #drop1.tab-pane.fade.show.active{"aria-labelledby" => "profile-tab", :role => "tabpanel"}
        = render 'jobs/index'
      #drop2.tab-pane.fade.show{"aria-labelledby" => "home-tab", :role => "tabpanel"}
        Calendar
      #drop3.tab-pane.fade.show{"aria-labelledby" => "home-tab", :role => "tabpanel"}
        .card-header
          %i.fa.fa-calendar
          /= Job.where(member_id: current_user.person.member.id).count
          = @member.jobs_count
          %b Jobs registered
        .card-header
          %i.fa.fa-clock
          = @member.jobs.map(&:service_duration).sum/60.to_d
          %b Hours worked
        .card-header
          %i.fa.fa-dollar-sign
          = @member_total_earnings
          %b My earnings

