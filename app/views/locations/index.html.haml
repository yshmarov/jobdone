- model_class = Location
%p
.card.card-default
  .container-fluid
    .card-heading
      %h4.card-title.float-left{:style => "padding-top: 7.5px;"} 
        .input-group
          .mr-sm-2
            %b=t '.title', :default => model_class.model_name.human.pluralize.titleize
      %h4.card-title.float-right{:style => "padding-top: 7.5px;"} 
        - if policy(Location).create?
          - if (Tenant.current_tenant.can_create_locations?)
            = link_to 'New Location', new_location_path, class: 'btn btn-sm btn-primary'
.table-responsive
  %table#table1
    %thead
      %tr
        %th Name
        %th
        %th
        %th Tel
        %th Email
        %th Address
        %th Status
        %th Balance, #{Tenant.current_tenant.default_currency.upcase}
        %th Jobs
  
    %tbody
      - @locations.each do |location|
        %tr
          %td= link_to location.name, location_path(location), class: "btn btn-primary btn-sm" if policy(location).show?
          %td= link_to '', edit_location_path(location), class: "btn btn-warning fa fa-edit btn-sm" if policy(location).update?
          %td
            - unless location.associations?
              = link_to '', location, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger fa fa-trash btn-sm" if policy(location).destroy?
            - else
              = link_to '', location, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger fa fa-trash btn-sm disabled" if policy(location).destroy?
          %td= location.tel
          %td= location.email
          %td= location.address
          /%td= location.status
          %td= status_label(location.status)
          %td= location.balance_cents
          %td= location.jobs_count


%br
