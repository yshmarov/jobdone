%p#notice= notice

%p
  %b Client:
  = @job.client
%p
  %b Starts at:
  = @job.starts_at
%p
  %b Ends at:
  = @job.ends_at
%p
  %b Status:
  = @job.status
%p
  %b Service:
  = @job.service
%p
  %b Location:
  = @job.location
%p
  %b Employee:
  = @job.employee
%p
  %b Service name:
  = @job.service_name
%p
  %b Service description:
  = @job.service_description
%p
  %b Service duration:
  = @job.service_duration
%p
  %b Client price:
  = number_to_currency(@job.client_price_cents, :unit => "#{@job.service.client_price_currency}, ")
%p
  %b Employee price:
  = number_to_currency(@job.employee_price_cents, :unit => "#{@job.service.employee_price_currency}, ")

= link_to 'Edit', edit_job_path(@job)
\|
= link_to 'Back', jobs_path
