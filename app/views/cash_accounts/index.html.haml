- model_class = CashAccount
.card
  .card-header
    %h5.float-left
      .fa.fa-hand-paper
      %b=t '.title', :default => model_class.model_name.human.pluralize.titleize
      .badge.badge-info
        = @cash_accounts.count
    %h5.float-right
      = link_to t('.new', :default => t("helpers.links.new")), new_cash_account_path, class: 'btn btn-sm btn-primary'
%table#table1
  %thead
    %tr
      %th Name
      %th Active
      %th Transactions_count
      %th Balance
      %th

  %tbody
    - @cash_accounts.each do |cash_account|
      %tr
        %td= cash_account.name
        %td= active_label(cash_account.active)
        %td= cash_account.transactions_count
        %td= cash_account.balance_cents
        %td
          .btn-group
            = link_to 'Edit', edit_cash_account_path(cash_account), class: 'btn btn-warning btn-sm'
            = link_to 'Destroy', cash_account, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm'
%br