= simple_form_for [@payable, @payment] do |f|
  - if @payment.errors.any?
    .error_messages
      %h2 Please correct the following errors.
      %ul
        - @payment.errors.full_messages.each do |msg|
          %li= msg
  /.field
  /  = f.input :client_id, input_html: {value: @event.client.id}, as: :hidden
  /  = f.input :amount_cents, input_html: {value: @event.client_price_to_pay_cents}, as: :hidden
  .actions
    = f.submit
