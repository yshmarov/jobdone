- model_class = InboundPayment
.card
  .card-body
    %h1=t '.title', :default => [:'helpers.titles.new', 'New %{model}'], :model => model_class.model_name.human.titleize
    = render 'form'
    %p
    = link_to t('.cancel', :default => t("helpers.links.cancel")), inbound_payments_path, :class => 'btn btn-danger'
