  .col-lg-3
  .col-lg-6
    .card
      .card-body
        %h5
          .far.fa-address-book
          Input your contact details
        %hr

        = render layout: 'form' do |f|
          = f.input :email
        
        %hr
        = link_to 'Back', previous_wizard_path, class: 'btn btn-secondary'


%h1 Add personal_data

= simple_form_for @user, url: wizard_path, method: :put do |f|
  = f.input :time_zone
  = f.submit 'Next', class: 'btn btn-primary'

%hr
= link_to 'Back', previous_wizard_path, class: 'btn btn-secondary'

/= link_to 'Skip', next_wizard_path