.row
  .col-lg-3
  .col-lg-6
    .card
      .card-body
        %h5
          .fa.fa-user-tie
          3/4
          Select member
        %hr

        = render layout: 'form' do |f|
          - if @members.any?
            = f.association :member, as: :radio_buttons, collection: @members
        
        %hr
        = link_to 'Back', previous_wizard_path, class: 'btn btn-secondary'
        .float-right
          = link_to 'Skip', next_wizard_path, class: 'btn btn-secondary'
          = link_to 'Any member', wizard_path(:personal_data), class: 'btn btn-primary'
