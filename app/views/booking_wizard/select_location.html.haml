.row
  .col-lg-3
  .col-lg-6
    .card
      .card-body
        %h5
          .far.fa-address-book
          2/4
          Select location
        %hr

        = render layout: 'form' do |f|
          - if @locations.any?
            = f.association :location, as: :radio_buttons, collection: @locations, label_method: :name_and_address
        
        %hr
        = link_to 'Back', previous_wizard_path, class: 'btn btn-secondary'
        = link_to 'Skip', next_wizard_path, class: 'btn btn-secondary'
        = link_to 'Any location', wizard_path(:select_member), class: 'btn btn-primary'
