= simple_form_for @user, url: wizard_path, method: :put do |f|
  - if @user.errors.any?
    .error_messages
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  = yield f
  .actions
    = f.submit "Continue"
