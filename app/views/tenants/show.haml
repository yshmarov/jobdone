- model_class = Tenant
.row
  .col-lg-6
    .card
      .card-header
        .fa.fa-cog
        =t '.title', :default => model_class.model_name.human.titleize
        .float-right
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_plan_path, :class => 'btn btn-warning btn-sm'
      .card-body
        %b= model_class.human_attribute_name(:name) + ':'
        %b= @tenant.name
        %br
        %b= model_class.human_attribute_name(:locale) + ':'
        %b= @tenant.locale.upcase
        %br
        %b= model_class.human_attribute_name(:default_currency) + ':'
        %b= @tenant.default_currency.upcase
        %hr
        %b= model_class.human_attribute_name(:id) + ':'
        %b= @tenant.id
        %br
        %b= model_class.human_attribute_name(:plan) + ':'
        = plan_label(@tenant.plan)
        %br
        %b= model_class.human_attribute_name(:created_at) + ':'
        %b
          = @tenant.created_at.strftime('%d/%h/%Y')
          (#{distance_of_time_in_words Time.now, @tenant.created_at})
    %p
  .col-lg-6
    .card-header
      %h6= t('.counters')
    %ul.list-group
      %li.list-group-item
        %i.fa.fa-user
        %b= t('.clients')
        %span.badge.badge-secondary
          = Client.count
      %li.list-group-item
        %i.fa.fa-hand-holding-usd
        %b= t('.inbound_payments')
        %span.badge.badge-secondary
          = InboundPayment.count
      %li.list-group-item
        %i.fa.fa-calendar-alt
        %b= t('.events')
        %span.badge.badge-secondary
          = Event.count
      %li.list-group-item
        %i.fa.fa-calendar
        %b= t('.jobs')
        %span.badge.badge-secondary
          = Job.count
      %li.list-group-item
        %i.fa.fa-user-tie
        %b= t('.members')
        %span.badge.badge-secondary
          = Member.count
      %li.list-group-item
        %i.fa.fa-hand-paper
        %b= t('.services')
        %span.badge.badge-secondary
          = Service.count
      %li.list-group-item
        %i.fa.fa-map-marker-alt
        %b= t('.locations')
        %span.badge.badge-secondary
          = Location.count
%p
