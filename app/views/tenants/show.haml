              %b
                180€ / 
                = t('static_pages.pricing.year')
              .row
              (
              15€ / 
              = t('static_pages.pricing.month')
              )
            /NOT DISCOUNTED GOLD
            %td
              %b
                600€ /
                = t('static_pages.pricing.year')
              .row
              (
              50€ / 
              = t('static_pages.pricing.month')
              )
            /DISCOUNTED GOLD
            /%td
            /  %s.text-danger
            /    600€ /
            /    = t('static_pages.pricing.year')
            /    .row
            /    (
            /    50€ /
            /    = t('static_pages.pricing.month')
            /    )
            /  .row
            /  %b.text-success.ml-1.mr-1
            /    540€ /
            /    = t('static_pages.pricing.year')
            /    .row
            /    (
            /    45€ / 
            /    = t('static_pages.pricing.month')
            /    )
          %tr
            %td= t('static_pages.pricing.employees')
            %td 5
            %td 1
            %td 5
            %td= t('static_pages.pricing.unlimited')
          %tr
            %td= t('static_pages.pricing.locations')
            %td 5
            %td 1
            %td 1
            %td= t('static_pages.pricing.unlimited')
