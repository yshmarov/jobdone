.text-center
  %h4= t('.expence_stats')
.row
  .col-lg-6
    .card
      .card-header
        .fa.fa-chart-line
        = t('.expences_per_month')
    %table.table.table-sm.table-bordered
      %tbody
        - @expences.group_by_month(:created_at).sum("amount/100").each do |k, v|
          %tr
            %td= k.strftime('%m/%Y')
            %td= v
    %p
  .col-lg-6
    .card
      .card-header
        .fa.fa-chart-line
        = t('.expence_types')
      .card-body
        = pie_chart @expences.group(:expendable_type).count, download: true