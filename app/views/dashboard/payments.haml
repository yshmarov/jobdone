/= form_tag dashboard_payments_path, method: :get do
/  = select_year(Date.today, {:prompt => "Year",:start_year => DateTime.now.year,:end_year => DateTime.now.year - 7, prefix: 'select'},{:field_name => 'year', :id => 'start-year'})
/  = select_month(Date.today, {:prompt => "month",use_short_month: true, prefix: 'select'},{:field_name => 'month', :id => 'start-month'})
/  = submit_tag("Search Job", :id=>"button", :class=>"Test", :name=>"submit")
.text-center
  %h4= t('.payment_stats')
.row
  .col-lg-6
    .card
      .card-header
        .fa.fa-chart-line
        = t('.payments_per_month')
    %table.table.table-sm.table-bordered
      %tbody
        - @inbound_payments.group_by_month(:created_at).sum("amount/100").each do |k, v|
          %tr
            %td= k.strftime('%m/%Y')
            %td= v
    %p
  .col-lg-6
    .card
      .card-header
        .fa.fa-chart-line
        = t('.payments_per_month')
      .card-body
        = bar_chart charts_payments_per_month_path
%p
.row
  .col-lg-6
    .card
      .card-header
        .fa.fa-chart-line
        = t('.payments_per_day')
    %table.table.table-sm.table-bordered
      %tbody
        - @inbound_payments.group_by_day(:created_at).sum("amount/100").each do |k, v|
          %tr
            %td= k.strftime('%d/%m/%Y')
            %td= v
    %p
  .col-lg-6
    .card
      .card-header
        .fa.fa-chart-line
        = t('.payments_per_day')
      .card-body
        = bar_chart charts_payments_per_day_path
        /= bar_chart InboundPayment.group_by_day(:created_at, format: "%B %Y").sum("amount/100")
        /= bar_chart InboundPayment.group_by_day(:created_at).sum("amount/100")
%p
