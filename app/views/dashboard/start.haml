.card
  .card-header
    .fa.fa-rocket
    = t('.start')
  .card-body
    %h5
      /ADD CONTACTS (PHONE)
      - unless current_user.member.phone_number.present?
        %span.badge.badge-pill.badge-danger -
        = link_to t('.edit_my_page'), edit_member_path(current_user.member)
      - else
        %span.badge.badge-pill.badge-success +
        %del
          = t('.edit_my_page')
      %hr
      /TENANT SETTINGS
      %span.badge.badge-pill.badge-danger -
      = link_to t('.select_currency'), edit_tenant_path
      %hr
      /CREATE LOCATION
      - unless Location.any?
        %span.badge.badge-pill.badge-danger -
        = link_to t('.new_location'), new_location_path
      - else
        %span.badge.badge-pill.badge-success +
        %del
          = t('.new_location')
      %hr
      /CREATE MEMBER
      - if (Tenant.current_tenant.plan == "silver") || (Tenant.current_tenant.plan == "gold")
        - if Member.count < 2
          %span.badge.badge-pill.badge-danger -
          = link_to t('.new_member'), new_member_path
        - else
          %span.badge.badge-pill.badge-success +
          %del
            = t('.new_member')
        %hr
      /CREATE SERVICE
      - unless Service.any?
        %span.badge.badge-pill.badge-danger -
        = link_to t('.new_service'), new_service_path
      - else
        %span.badge.badge-pill.badge-success +
        %del
          = t('.new_service')
      %hr
      /CREATE CLIENT
      - unless Client.any?
        %span.badge.badge-pill.badge-danger -
        = link_to t('.new_client'), new_client_path
      - else
        %span.badge.badge-pill.badge-success +
        %del
          = t('.new_client')
      %hr
      /CREATE EVENT
      - unless Event.any?
        %span.badge.badge-pill.badge-danger -
        = link_to t('.new_event'), new_event_path
      - else
        %span.badge.badge-pill.badge-success +
        %del
          = t('.new_event')
      %hr
      /CREATE PAYMENT
      - unless InboundPayment.any?
        %span.badge.badge-pill.badge-danger -
        = link_to t('.new_payment'), new_inbound_payment_path
      - else
        %span.badge.badge-pill.badge-success +
        %del
          = t('.new_payment')
        %hr
        /FINISH
        = t('.finish')
%br
.text-center
  %h4
    = t('.today')
    = I18n.localize Date.today, format: :short
%p
.row
  .col-lg-4
    %li.list-group-item
      .fa.fa-calendar-check
      %b= t('tenants.show.events')
      %span.badge.badge-secondary
        = Event.where("created_at >= ?", Time.zone.now.beginning_of_day).count
  .col-lg-4
    %li.list-group-item
      %i.fa.fa-user
      %b= t('tenants.show.clients')
      %span.badge.badge-secondary
        = Client.where("created_at >= ?", Time.zone.now.beginning_of_day).count
  .col-lg-4
    %li.list-group-item
      %i.fa.fa-hand-holding-usd
      %b= t('tenants.show.inbound_payments')
      %span.badge.badge-secondary
        = InboundPayment.where("created_at >= ?", Time.zone.now.beginning_of_day).count
%p
.row
  .col-lg-6
    .card
      .card-header
        .fa.fa-birthday-cake
        = t('.client_birthdays_today')
        .badge.badge-secondary
          = @clients.count
      .card-body
        - @clients.each do |client|
          = link_to "#{client.date_of_birth.strftime('%b, %d')} - #{client}", client_path(client)
    %p
  .col-lg-6
    .card
      .card-header
        .fa.fa-birthday-cake
        = t('.next_5_member_birthdays')
      .card-body
        - @members.each do |member|
          = link_to "#{member.date_of_birth.strftime('%b, %d')} - #{member}", member_path(member)
%p
.row
  .col-lg-6
    - @events = Event.today
    .card-header
      .fa.fa-calendar-check
      = t('.events_today')
      .badge.badge-danger
        = @events.count
    = render 'events/index'
    %p
  .col-lg-6
    - @events = Event.tomorrow
    .card-header
      .fa.fa-calendar-check
      = t('.events_tomorrow')
      .badge.badge-danger
        = @events.count
    = render 'events/index'
