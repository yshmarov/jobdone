.card
  .card-body
    %h5
      /General tenant settings
      %span.badge.badge-pill.badge-warning -
      = link_to t('.select_currency'), edit_tenant_path
      %hr
      /Currency
      /CREATE MEMBER
      - if Tenant.current_tenant.can_create_members?
        - if Member.count < 2
          %span.badge.badge-pill.badge-warning -
          = link_to t('.new_member'), new_member_path
        - else
          %span.badge.badge-pill.badge-success +
          %del
            = t('.new_member')
        %hr
      /CREATE SERVICE
      - unless Service.any?
        %span.badge.badge-pill.badge-danger -
        = link_to t('.new_service'), new_service_path
      - else
        %span.badge.badge-pill.badge-success +
        %del
          = t('.new_service')
      %hr
      /CREATE CLIENT
      - unless Client.any?
        %span.badge.badge-pill.badge-danger -
        = link_to t('.new_client'), new_client_path
      - else
        %span.badge.badge-pill.badge-success +
        %del
          = t('.new_client')
      %hr
      /CREATE EVENT
      - unless Event.any?
        %span.badge.badge-pill.badge-danger -
        = link_to t('.new_event'), new_event_path
      - else
        %span.badge.badge-pill.badge-success +
        %del
          = t('.new_event')
      %hr
      /CREATE PAYMENT
      - unless Transaction.any?
        %span.badge.badge-pill.badge-danger -
        = link_to t('.new_payment'), new_transaction_path
      - else
        %span.badge.badge-pill.badge-success +
        %del
          = t('.new_payment')
%br
