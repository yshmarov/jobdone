.row
  .col-lg-3
  .col-lg-6
    .card
      .card-body
        %h5
          = model_icon(@favicon)
          = wizard_steps.index(step) + 1
          \/
          = wizard_steps.count

          = step.to_s.humanize
        %hr

        = simple_form_for @member, url: after_signup_wizard_path, method: :put do |f|
          = f.error_notification
          = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

          = f.input :first_name, input_html: { autocomplete: 'nope' }
          = f.input :last_name, input_html: { autocomplete: 'nope' }
          = f.input :phone_number, input_html: { autocomplete: 'nope' }, placeholder: "+38"
          = f.input :time_zone
          = f.input :online_booking
          = f.submit "Continue", class: 'btn btn-success'

        %hr
        = link_to 'Back', previous_wizard_path, class: 'btn btn-secondary'
        .float-right
          = link_to 'Skip', next_wizard_path, class: 'btn btn-secondary'
